{{#card.content}}
  {{form.input label="Name" type="string" value=currentOutfit.name onChange=(action (mut currentOutfit.name))}}
  {{#paper-select
  disabled=disableSelect
  label="Category"
  options=tags
  selected=selectedTag
  onChange=(action (mut selectedTag))
  as |tag|
  }}
    {{tag.name}}
  {{/paper-select}}
{{/card.content}}

{{#card.actions class="layout-row layout-align-start-center" as |actions|}}
  {{#actions.icons}}
    {{#paper-button iconButton=true}}{{paper-icon 'favorite'}}{{/paper-button}}
    {{#paper-button iconButton=true onClick=(action "takePhoto" currentOutfit)}}{{paper-icon 'camera'}}{{/paper-button}}
  {{/actions.icons}}
  {{#paper-button onClick=(action form.onSubmit)}}Save{{/paper-button}}
{{/card.actions}}