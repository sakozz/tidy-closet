<div class="tag-view">
  {{#liquid-if showCurrentOutfit class="outfit-item"}}
    {{partial 'tags/outfit'}}
  {{else}}
      <div class="container-fluid"><h3> {{model.name}} </h3></div>
      <div class="grid">
        {{#each outfits as |outfit|}}
            <div class="col-xs-6 col-sm-4">
              {{#paper-card  as |card|}}
                  <div class="linked-card" {{action 'showOutfit' outfit}}>
                      <div class="default-image" style= {{outfit.imageBg}}></div>
                    {{#card.content}}
                        <p>{{outfit.name}} </p>
                    {{/card.content}}
                  </div>
                {{#card.actions class="layout-row layout-align-start-center" as |actions|}}
                  {{#actions.icons}}
                    {{#paper-button iconButton=true onClick=(action "addToFavorite" outfit) primary=outfit.isFavorite}}
                      {{paper-icon 'favorite'}}
                    {{/paper-button}}
                  {{/actions.icons}}
                {{/card.actions}}
              {{/paper-card}}
            </div>
        {{/each}}
      </div>
    {{#paper-button raised=true fab=true primary=true onClick=(action 'addNewOutfit')}}{{paper-icon 'add'}}{{/paper-button}}
  {{/liquid-if}}
</div>