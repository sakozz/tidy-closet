{{#paper-form onSubmit=(action "saveRecord" currentOutfit) as |form|}}
  {{#paper-card class="layout-column flex-xs flex-gt-xs-25" as |card|}}
      <div {{action 'viewImage' currentOutfit 0}}>
        {{card.image src=currentOutfit.defaultImage alt="Washed Out" title="Washed Out" class=(concat currentOutfit.id '-image-' 0) }}
      </div>
      <div class="grid images">
        {{#each currentOutfit.images as |image index|}}
            <div class="col-xs-3 image">
                <img src= {{concat "data:image/jpeg;base64," image.Base64Content}}
                             class= {{concat currentOutfit.id '-image-' index}} {{action 'viewImage' currentOutfit index}}>
            </div>
        {{/each}}
      </div>
      {{#card.title as |title|}}
          {{#title.text as |text|}}
            {{#text.headline}}
              {{currentOutfit.name}}
            {{/text.headline}}
          {{/title.text}}
      {{/card.title}}
      {{#liquid-spacer}}
        {{#if showOutfitForm}}
          {{partial 'tags/outfit-form'}}
        {{else}}
          {{#card.actions class="layout-row layout-align-start-center" as |actions|}}
            {{#actions.icons}}
              {{#paper-button iconButton=true onClick=(action "addToFavorite" currentOutfit) primary=currentOutfit.isFavorite}}{{paper-icon 'favorite'}}{{/paper-button}}
              {{#paper-button iconButton=true onClick=(action "deleteRecord" currentOutfit)}}{{paper-icon 'delete'}}{{/paper-button}}
            {{/actions.icons}}
            {{#paper-button onClick=(action "editOutfit" currentOutfit)}}Edit{{/paper-button}}
          {{/card.actions}}
        {{/if}}
      {{/liquid-spacer}}
  {{/paper-card}}
{{/paper-form}}

{{#if showDialog}}
  {{#paper-dialog onClose=(action "closeDialog") origin=dialogOrigin class="outfit-images-dialog"}}

    {{#paper-dialog-content}}
      {{#swiper-container}}
      {{#each currentOutfit.images as |image|}}
            {{#swiper-slide}}
              <div class="flex">
                  <img src= {{concat 'data:image/jpeg;base64,' image.Base64Content}} {{action 'viewImage' image}}>
              </div>
            {{/swiper-slide}}
      {{/each}}
      {{/swiper-container}}
    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row" }}
        <span class="flex"></span>
        {{#paper-button onClick=(action "closeDialog")}}X{{/paper-button}}
    {{/paper-dialog-actions}}
  {{/paper-dialog}}
{{/if}}


